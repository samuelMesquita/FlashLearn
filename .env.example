# Environment Variables Template
# Copy this file to .env and update with your values
# DO NOT commit .env file to Git

# SQL Server
SA_PASSWORD=YourStrong@Passw0rd
MSSQL_PID=Express

# JWT Configuration
JWT_SECRET_KEY=YourSuperSecretKeyMinimum32CharactersLong!@#$%
JWT_ISSUER=FlashLearnAPI
JWT_AUDIENCE=FlashLearnAngular
JWT_EXPIRES_IN_HOURS=24

# RabbitMQ
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Docker
TAG=latest

# API URLs (for local development)
IDENTITY_API_URL=http://localhost:5001
DECKS_API_URL=http://localhost:5002
FLASHCARDS_API_URL=http://localhost:5003
CATEGORIES_API_URL=http://localhost:5004
API_GATEWAY_URL=http://localhost:5000

# Database Connection Strings
IDENTITY_CONNECTION_STRING=Server=localhost,1433;Database=FlashLearnIdentity;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;
DECKS_CONNECTION_STRING=Server=localhost,1433;Database=FlashLearnDecks;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;
FLASHCARDS_CONNECTION_STRING=Server=localhost,1433;Database=FlashLearnFlashCards;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;
CATEGORIES_CONNECTION_STRING=Server=localhost,1433;Database=FlashLearnCategories;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;
